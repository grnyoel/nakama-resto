<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECEBE6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Example History Item 1 -->
            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Cart"
                android:layout_marginTop="32dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                android:fontFamily="@font/poppins_regular"
                android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewHistory1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_rounded_corner"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textHistoryDate1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: July 15, 2024"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textHistoryItem1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Items: Bluefin Tuna Sashimi, Alaskan King Crab"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/textHistoryTotal1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: IDR 4.710.000"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Example History Item 2 (similar structure as Item 1) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewHistory2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/background_rounded_corner"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textHistoryDate2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date: July 14, 2024"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/textHistoryItem2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Items: Oyster"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>

                    <TextView
                        android:id="@+id/textHistoryTotal2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total: IDR 300.000"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Add more history items as needed -->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
